    #:kivy 1.0.9

<Bt1>:
    text: 'press me'
    pos: 50,50
    size: 100,100
    on_press: print("ouch! More gently please")
    on_release: print("ahhh")
    on_state:
        print("my current state is {}".format(self.state))


<Angle>:
    range: -90,90
    step: 1
    pos: 200,200 
    value_track_color: "#3fcc54"
    size: root.width, root.height
    size_hint_x: (2)

    

    orientation: 'horizontal'
    on_touch_move: print(self.value)
    Label:

        pos: 200, 200
        text: "window opening"
        color: "#cc3f69"
    


<manager>:
    Bt1:
        id: flash
    Angle:
        id: one
    